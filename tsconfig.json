{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/*"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
}
